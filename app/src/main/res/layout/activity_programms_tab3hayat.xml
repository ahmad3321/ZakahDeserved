<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="حياة"
            android:textSize="18sp"
            android:fontFamily="@font/heaven"
            android:layout_margin="15dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/ZakatID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/purple_200"
            android:enabled="false"
            android:hint="رقم المستفيد"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/BeneficiaryName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/jaz_bold"
            android:hint="اسم المستفيد"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/purple_200" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jaz_reg"
                android:text="نوع الحالة"
                android:textSize="18sp"
                android:typeface="serif" />

            <Spinner
                android:id="@+id/StatusType"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:entries="@array/StatusType" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jaz_reg"
                android:text="الطبيب أو المؤسسة المحيلة"
                android:textSize="18sp"
                android:typeface="serif" />
            <Spinner
                android:id="@+id/DoctorOrInstitution"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/DoctorOrInstitution"
                android:layout_marginStart="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jaz_reg"
                android:text="الخدمة الطبية المقدمة"
                android:textSize="18sp"
                android:typeface="serif" />
            <Spinner
                android:id="@+id/MedicalService"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/MedicalService"
                android:layout_marginStart="40dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jaz_reg"
                android:text="مزود الخدمة"
                android:textSize="18sp"
                android:typeface="serif" />
            <Spinner
                android:id="@+id/ServiceProvider"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/ServiceProvider"
                android:layout_marginStart="120dp"/>
        </LinearLayout>
        <EditText
            android:id="@+id/ServiceProviderName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/jaz_bold"
            android:hint="اسم مزود الخدمة"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:backgroundTint="@color/purple_200" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:background="@drawable/round_grey">
            <EditText
                android:id="@+id/StockValue"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_grey"
                android:hint="قيمة السهم"
                android:textSize="14sp"
                android:paddingStart="10dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:inputType="number"
                android:layout_height="40dp" />
            <Spinner
                android:id="@+id/CoinType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:entries="@array/CoinType" />
        </LinearLayout>
        <EditText
            android:id="@+id/ReceivedDate"
            style="@style/modifiedEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:textSize="16sp"
            android:focusableInTouchMode="false"
            android:hint="التاريخ" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jaz_reg"
                android:text="نتيجة الخدمة"
                android:textSize="18sp"
                android:typeface="serif" />
            <Spinner
                android:id="@+id/Result"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/Result"
                android:layout_marginStart="110dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_image7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Image_Hayatprogram_File"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@android:drawable/ic_input_add"
                android:text="اضافة وثيقة" />

            <Button
                android:id="@+id/btn_Image_exem_deletee"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@android:drawable/ic_delete"
                android:onClick="btn_delete_images"
                app:backgroundTint="#C50505" />
        </LinearLayout>

        <Button
            android:id="@+id/button_Insert_Hayat"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_primary"
            android:fontFamily="@font/jaz_bold"
            android:onClick="onClick"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="إدخال"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</ScrollView>


