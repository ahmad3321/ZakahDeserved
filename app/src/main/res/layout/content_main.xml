<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollFeed"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/act_delay_entry_statistical"
    tools:context="com.example.zakahdeserved.actdelayentrystatisticalActivity"
    android:focusableInTouchMode="true">

    <androidx.cardview.widget.CardView
        android:id="@+id/personalDetailsCard"
        style="@style/centreLocatorCardDesign"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="false"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/contact_form_title4"
                style="@style/headerTextPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jaz_bold"
                android:text="فني إحصائي"
                android:textSize="20sp" />

            <com.google.android.material.textfield.TextInputLayout

                android:id="@+id/txtInputName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/txtName"
                    style="@style/modifiedEditText"
                    android:hint="الاسم"
                    android:fontFamily="@font/jaz_bold"
                    android:singleLine="true" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <EditText
                    android:id="@+id/txtEmail"
                    style="@style/modifiedEditText"
                    android:ems="10"
                    android:fontFamily="@font/jaz_bold"
                    android:hint="مسؤول لجنة الإحصاء 'الرقم الوظيفي'"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputMob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/txtMob"
                    style="@style/modifiedEditText"
                    android:ems="10"
                    android:fontFamily="@font/jaz_bold"
                    android:hint="مسؤول لجنة الإحصاء 'الرقم الوظيفي'" />
            </com.google.android.material.textfield.TextInputLayout>
            <Spinner
            android:id="@+id/lst_directorates1"
            android:layout_width="156dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/contact_form_title4"
            android:layout_marginStart="160dp"
            android:layout_marginTop="5dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputReg"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/ManualDate"
                    style="@style/modifiedEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ems="10"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/jaz_bold"
                    android:hint="تاريخ الزيارة" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txtInputFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <EditText
                    android:id="@+id/txtFeed"
                    style="@style/modifiedEditText"
                    android:hint="سعر الدولار"
                    android:fontFamily="@font/jaz_bold"
                    android:inputType="textMultiLine" />

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnSend"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginTop="20dp"
                android:background="@drawable/centre_button"
                android:fontFamily="@font/jaz_bold"
                android:text="ادخل"
                android:textColor="@color/whiteTextColor"
                android:textSize="17sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.core.widget.NestedScrollView>