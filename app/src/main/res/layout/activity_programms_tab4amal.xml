<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/heaven"
            android:text="أمل"
            android:textColor="@color/black"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/PersonID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/purple_200"
            android:enabled="false"
            android:hint="رقم المستفيد"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/BeneficiaryName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/purple_200"
            android:hint="اسم المستفيد"
            android:fontFamily="@font/jaz_bold"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/PreviousExperiences"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/purple_200"
            android:fontFamily="@font/jaz_bold"
            android:hint="خبرات سابقة"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/MonthlyDuration"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:backgroundTint="@color/purple_200"
            android:hint="المدة بالأشهر" />
        <EditText
            android:id="@+id/RequiredExperiences"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/jaz_bold"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:backgroundTint="@color/purple_200"
            android:hint="خبرات لازمة" />
        <EditText
            android:id="@+id/ExperiencesEffect"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="16sp"
            android:backgroundTint="@color/purple_200"
            android:fontFamily="@font/jaz_bold"
            android:hint="تأثير الخبرات بعد الحصول عليها" />

        <EditText
            android:id="@+id/BeneficiaryContribution"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:backgroundTint="@color/purple_200"
            android:fontFamily="@font/jaz_bold"
            android:hint="مساهمات المستفيد في تمويل المشروع"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jaz_reg"
                android:text="نوع الخدمة"
                android:textSize="18sp"
                android:typeface="serif" />

            <Spinner
                android:id="@+id/ServiceType"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:entries="@array/ServiceType" />
        </LinearLayout>
        <EditText
            android:id="@+id/Domain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:backgroundTint="@color/purple_200"
            android:fontFamily="@font/jaz_bold"
            android:hint="المجال"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/Description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:backgroundTint="@color/purple_200"
            android:fontFamily="@font/jaz_bold"
            android:hint="الوصف"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/ServiceProvider"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:backgroundTint="@color/purple_200"
            android:fontFamily="@font/jaz_bold"
            android:hint="مزود الخدمة"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="horizontal"
            android:background="@drawable/round_grey">
            <EditText
                android:id="@+id/StockValue"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_grey"
                android:hint="قيمة السهم"
                android:textSize="14sp"
                android:paddingStart="10dp"
                android:padding="5dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:inputType="number"
                android:layout_height="40dp" />
            <Spinner
                android:id="@+id/CoinType"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:entries="@array/CoinType" />
        </LinearLayout>
        <EditText
            android:id="@+id/ReceivedDate"
            style="@style/modifiedEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:textSize="16sp"
            android:focusableInTouchMode="false"
            android:hint="التاريخ" />
        <EditText
            android:id="@+id/Result"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:backgroundTint="@color/purple_200"
            android:fontFamily="@font/jaz_bold"
            android:hint="النتيجة"
            android:textSize="16sp" />
        <Button
            android:id="@+id/button_Insert_Amal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/round_primary"
            android:onClick="onClick"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="إدخال"
            android:fontFamily="@font/jaz_bold"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>


