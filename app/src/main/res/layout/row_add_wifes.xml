<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="vertical"
            android:visibility="visible">
            <EditText
                android:id="@+id/PersonID"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                android:backgroundTint="@color/purple_200" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="نوع الوثيقة"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/WhoIs"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/WhoIsWifeChildren"
                    android:background="@drawable/spinner_back"
                    android:theme="@style/CustomSpinnerTheme"
                    android:layout_marginStart="40dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="الاسم"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jaz_bold"
                    android:layout_marginStart="40dp"
                    android:backgroundTint="@color/purple_200"
                    android:hint="الاسم"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="اسم الأب"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/FatherName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jaz_bold"
                    android:layout_marginStart="40dp"
                    android:backgroundTint="@color/purple_200"
                    android:hint="اسم الأب" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="الكنية"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/LastName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jaz_bold"
                    android:layout_marginStart="40dp"
                    android:backgroundTint="@color/purple_200"
                    android:hint="الكنية" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="0dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="اسم الأم الثلاثي"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/MotherFullName"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jaz_bold"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/purple_200"
                    android:hint="اسم الأم الثلاثي"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="0dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="الصلة بالمستفيد"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/Relation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jaz_bold"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="@color/purple_200"
                    android:hint="الصلة بالمستفيد"  />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="نوع الوثيقة"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/lst_IdentityTypes"
                    android:layout_width="150dp"
                    android:theme="@style/SpinnerTheme"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="رقم الوثيقة"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/IdentityNumber"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jaz_bold"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="@color/purple_200"
                    android:hint="رقم الوثيقة"   />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="مكان الولادة"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/BirthPlace"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jaz_bold"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="@color/purple_200"
                    android:hint="مكان الولادة"  />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="تاريخ الولادة"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/BirthDate"
                    style="@style/modifiedEditText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="30dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:focusableInTouchMode="false"
                    android:fontFamily="@font/jaz_bold"
                    android:hint="تاريخ الولادة" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="55dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="القيد"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/Record"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jaz_bold"
                    android:layout_marginStart="30dp"
                    android:backgroundTint="@color/purple_200"
                    android:hint="القيد" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="الجنس"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/Gender"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/Gender"
                    android:background="@drawable/spinner_back"
                    android:theme="@style/CustomSpinnerTheme"
                    android:layout_marginStart="70dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="المؤهل العلمي"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <Spinner
                    android:id="@+id/AcademicQualification"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/spinner_back"
                    android:theme="@style/CustomSpinnerTheme"
                    android:layout_marginStart="15dp"
                    android:entries="@array/AcademicQualification"/>
            </LinearLayout>
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/jaz_reg"
                android:text="هل تعمل"
                android:textSize="18sp"
                android:typeface="serif" />

            <Spinner
                android:id="@+id/IsWorking"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:entries="@array/YesNo"
                android:background="@drawable/spinner_back"
                android:theme="@style/CustomSpinnerTheme"
                android:layout_marginStart="55dp" />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/jaz_reg"
                    android:text="الدخل الشهري"
                    android:textSize="18sp"
                    android:typeface="serif" />

                <EditText
                    android:id="@+id/MonthlyIncome"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/jaz_bold"
                    android:layout_marginStart="10dp"
                    android:inputType="numberDecimal"
                    android:backgroundTint="@color/purple_200"
                    android:hint="الدخل الشهري"  />

            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/round_grey">

                <Spinner
                    android:id="@+id/CoinType"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:entries="@array/CoinType" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/linear_image7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_Image_Document_Person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@android:drawable/ic_input_add"
                    android:fontFamily="@font/jaz_bold"
                    android:text="اضافة الوثائق" />

                <Button
                    android:id="@+id/btn_Image_Document_Person_delete"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:drawable/ic_delete"
                    android:onClick="btn_Image_Document_Person_delete"
                    app:backgroundTint="#C50505" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الحالة الصحية"
                    android:textSize="17sp"
                    android:fontFamily="@font/heaven"
                    android:layout_margin="15dp"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:id="@+id/layout_list_Wifes_HealthStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

                <Button
                    android:id="@+id/button_add_WifesHealthStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_primary"
                    android:drawableRight="@drawable/ic_add"
                    android:fontFamily="@font/jaz_bold"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="إضافة"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>

            <ImageView
                android:id="@+id/image_remove_Wife"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_close"
                app:tint="@color/black" />
        </LinearLayout>
        </LinearLayout>


</ScrollView>


